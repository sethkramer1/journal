<div class="form-group">

  <%= form_tag(profile_index_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search] %>

   <%= submit_tag "Filter by tag", class: " btn-sm"%>

  <% end %>


<%= form_tag(profile_index_path, :method => "get", id: "search-form") do %>
<%= select_tag "search", options_for_select([['💩'] ,['😊'],['😡'],['😏'],['🙃']])%>

 <%= submit_tag "Filter by emoji", class: " btn-sm"%>

<% end %>
</div>




<% @links.each do |link| %>
<div class="link row clearfix">
  <h1>
    <%= link_to link.title, link %><br>
  </h1>
  <h4>  <%= link.description %><br></h4>
  <p><small class="author">Submitted <%= time_ago_in_words(link.created_at) %> ago by <%= link.user.username %>

  <br> <%= link_to "#{link.comments.count} comments", link %> </p></small>



</div>
<% end %>


<%= will_paginate @links %>


<% if @links.blank? %>
<br>
  <h4>There are no journals with the <%= params[:search] %> emotion.</h4>
  <%end%>
